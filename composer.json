{
    "name": "yurii/sage",
    "description": "CLI helper for local development",
    "keywords": ["brew", "console", "cli", "mamp", "sage"],
    "license": "MIT",
    "authors": [
        {
            "name": "Yurii Torbyk"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "laravel-zero/framework": "5.6.*",
        "vaimo/composer-patches": "^3.27",
        "php-school/cli-menu": "3.0 as 2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "ext-posix": "0"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["sage"],
    "extra": {
        "patches": {
            "laravel-zero/framework": {
                "compiling-code": {
                    "source": "patches/compiling-code.patch"
                }
            }
        }
    }
}
